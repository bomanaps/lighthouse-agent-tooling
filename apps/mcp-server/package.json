{
  "name": "@lighthouse-tooling/mcp-server",
  "version": "0.1.0",
  "description": "MCP (Model Context Protocol) server for Lighthouse storage integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@lighthouse-tooling/sdk-wrapper": "workspace:*",
    "@lighthouse-tooling/types": "workspace:*",
    "@lighthouse-tooling/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.5",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.0.0"
  }
}
