{
  "name": "lighthouse-cursor-extension",
  "displayName": "Lighthouse Storage for Cursor",
  "description": "AI-native Lighthouse storage integration for Cursor IDE with MCP support",
  "version": "0.1.0",
  "publisher": "lighthouse-web3",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Data Science"
  ],
  "keywords": [
    "lighthouse",
    "ipfs",
    "storage",
    "ai",
    "cursor",
    "mcp",
    "encryption",
    "datasets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lighthouse.cursor.uploadFile",
        "title": "Upload File to Lighthouse",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.cursor.createDataset",
        "title": "Create AI Dataset",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.cursor.connectMCP",
        "title": "Connect to MCP Server",
        "category": "Lighthouse"
      }
    ],
    "configuration": {
      "title": "Lighthouse",
      "properties": {
        "lighthouse.cursor.apiKey": {
          "type": "string",
          "description": "Lighthouse API key for authentication"
        },
        "lighthouse.cursor.autoStartMCP": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server for Cursor AI integration"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "type-check": "tsc --noEmit",
    "package": "vsce package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm run type-check"
  },
  "dependencies": {
    "@lighthouse-tooling/shared": "workspace:*",
    "@lighthouse-tooling/sdk-wrapper": "workspace:*",
    "@lighthouse-tooling/types": "workspace:*",
    "@lighthouse-tooling/extension-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.5"
  }
}
